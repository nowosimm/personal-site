---
import HeaderLayout from "../layouts/Header.astro";
import "../styles/global.css";
import fillerImage from "../components/images/projectImages/filler.jpeg";
import stardew from "../components/images/projectImages/Stardew.png";
import memory from "../components/images/projectImages/memory.png";
import CVbuilder from "../components/images/projectImages/CVbuilder_cover.png";
import weatherApp from "../components/images/projectImages/weather_view.png";
import sketchApp from "../components/images/projectImages/sketch_cover.png";
import toDoList from "../components/images/projectImages/toDo_cover.png";
import shoppingCart from "../components/images/projectImages/shoppingCart_cover.png";
import craftTracker from "../components/images/projectImages/craft_cover.png";
import mockBlog from "../components/images/projectImages/mockBlog_cover.png";


const projects = [
  {
    title: "Craft Tracker",
    image: craftTracker,
    link: "craft-tracker",
  },
  { title: "Memory Game", image: memory, link: "memory-game" },
  {
    title: "Stardew Valley Guide",
    image: stardew,
    link: "stardew-guide",
  },
  { title: "Mock Blog", image: mockBlog, link: "mock-blog" },
  { title: "To-Do List", image: toDoList, link: "to-do" },
  {
    title: "Etch-a-Sketch",
    image: sketchApp,
    link: "etch-a-sketch",
  },
  { title: "Weather App", image: weatherApp, link: "weather-app" },
  {
    title: "Shopping Cart",
    image: shoppingCart,
    link: "shopping-cart",
  },
  {
    title: "Resume Builder",
    image: CVbuilder,
    link: "resume-builder",
  },
];
---

<HeaderLayout title="About Me">
  <!-- header -->
</HeaderLayout>

<div class="grid grid-cols-1 gap-9 m-10 xl:grid-cols-3 md:grid-cols-2">
  {
    projects.map((p) => (
      <a href={`/Project/${p.link}`} class="links">
<div
  class="group relative flex justify-center items-center bg-cover bg-center h-80 rounded-xl shadow-md hover:scale-105 transition-transform duration-400 ease-in-out"
  style={`background-image: url(${p.image.src});`}
>
  <div
    class="absolute inset-0 bg-white/60 rounded-xl transition-colors duration-500 ease-in-out group-hover:bg-transparent"
  />
  <div class="relative z-10 my-7 p-4 rounded">
    <p class="font-semibold group-hover:text-transparent transition-colors duration-500">
      {p.title}
    </p>
  </div>
</div>

      </a>
    ))
  }
</div>
